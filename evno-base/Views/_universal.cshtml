<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:600" rel="stylesheet">
    @Styles.Render("~/Content/Extension/Style")
    @Scripts.Render("~/Content/Extension/Script")
    
</head>
<body>
    <div id="loaderInit"></div>
    <div ng-app="universal" ng-controller="universalController">
        <div id="topNav">
            <div id="userArea">
                <span>{{ username }}</span><i class="fa fa-angle-down" aria-hidden="true"></i>
                <div id="userAreaContent">
                    <div>@*<i class="fa fa-user-circle" aria-hidden="true"></i>*@ Profile</div>
                    <div>@*<i class="fa fa-user-circle" aria-hidden="true"></i>*@ Settings</div>
                    <div>@*<i class="fa fa-sign-out" aria-hidden="true"></i>*@ Logout</div>
                </div>
            </div>
        </div>
        <div id="leftNav" class="scrollbar">
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
</body>
</html>
